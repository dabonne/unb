{% trans_default_domain 'FOSUserBundle' %}
<div class="wrapper">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-signin" >
        <div class="login-logo" align="center">
            <img src="{{ absolute_url(asset('images/login_logo.jpg'))}}" id="image-logo">
            <h3>Voulez vous changer de mot de passe?</h3>
        </div>
        <div class="md-form">
            <label for="username">{{ 'resetting.request.username'|trans }}</label>
            <input type="text" id="username" name="username" required="required" class="form-control" />
        </div>
        <div align="center">
            <input type="submit" class="btn btn-primary btn-block" value="{{ 'resetting.request.submit'|trans }}" />
            <a href="{{ path('fos_user_security_login') }}">Connexion</a>
        </div>
    </form>

</div>

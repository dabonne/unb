                            </li>
                        </ul>
                        <!-- Right -->

                        <ul class="navbar-nav nav-flex-icons dropdown">
                            <li class="nav-item" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <a  class="nav-link border border-light rounded waves-effect">
                                  <span style="color: orange"><i class="fas fa-power-off"></i>
                                      Infos du Compte
                                  </span>
                                </a>
                            </li>
                            <li>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="nav-link waves-effect dropdown-item" href="{{ path('fos_user_security_logout') }}">
                                        <span style="color: orange"><i class="fas fa-power-off"></i>
                                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                                        </span>
                                        </a>
                                        <a class="nav-link waves-effect dropdown-item" href="{{ path('utilisateur_show_entreprise',{'id':user.id}) }}">
                                            <i class="material-icons fas fa-user"></i>
                                            <span style="color: orange">Mon Compte</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

    {% endblock %}

    {% block content %}

    {% endblock %}

    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script>
            $(document).ready(function () {
                $('#send_diplome').click(function (e) {
                    e.preventDefault();
                    var numDiplome = $('#verifier').val();
                    $(location).attr('href',Routing.generate('diplome_verif',{'numeroDiplome':numDiplome}));
                })
            })
        </script>
    {% endblock %}

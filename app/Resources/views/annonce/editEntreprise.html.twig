{% extends 'entrepriseIndex.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        main{
            padding-left: 0;
        }
    </style>
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        {{ parent() }}
        <main class="pt-5 mx-lg-6" style="padding: 0 10% 0 10%">
            <div class="container-fluid mt-5">
                <div class="card card-cascade narrower mb-4">
                    <div class="view view-cascade py-3 gradient-card-header info-color-dark mx-4 d-flex justify-content-between align-items-center">
                        <a href="" class="white-text mx-3">Nouvelle Annonce</a>
                        <a href="{{ path('annonce_index_entreprises') }}" class="btn btn-sm btn-info ">
                            <i class="fas fa-list"></i> Voire la liste
                        </a>
                        <a href="{{ path('annonce_new_entreprise') }}" class="btn btn-sm btn-info ml-2">
                            <i class="fas fa-plus-circle"></i> Ajoueter
                        </a>
                    </div>
                    <div class="card-body" align="center">
                        <div class="card col-md-10">
                            <h5 class="card-header info-color white-text text-center py-4">
                                <strong>Nouvelle Annonce</strong>
                            </h5>
                            <div class="card-body px-lg-5 pt-0 mb-1">
                                {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'}}) }}
                                <div class="row">
                                    <div class="col-md-6">
                                        {{ form_label(edit_form.intitule) }}
                                        {{ form_widget(edit_form.intitule) }}
                                        {{ form_errors(edit_form.intitule) }}
                                    </div>
                                    <div class="col-md-6">
                                        {{ form_label(edit_form.natures) }}
                                        {{ form_widget(edit_form.natures) }}
                                        {{ form_errors(edit_form.natures) }}
                                    </div>

                                </div>
                                <p></p>
                                <p></p>
                                <div class="row" align="center">
                                    {{ form_label(edit_form.information) }}
                                    {{ form_widget(edit_form.information) }}
                                    {{ form_errors(edit_form.information) }}
                                </div>
                                <p></p>
                                <p></p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="col-md-4">
                                            {{ form_label(edit_form.pieceFile) }}
                                            {{ form_widget(edit_form.pieceFile) }}
                                            {{ form_errors(edit_form.pieceFile) }}
                                        </div>
                                    </div>
                                    <div class=" col-md-6">
                                        {{ form_label(edit_form.dateFin) }}
                                        {{ form_widget(edit_form.dateFin) }}
                                        {{ form_errors(edit_form.dateFin) }}
                                    </div>
                                </div>
                                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Enregistrer</button>
                                {{ form_end(edit_form) }}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    {% endblock %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ absolute_url(asset("node_modules/@ckeditor/ckeditor5-build-classic/build/ckeditor.js")) }}"></script>

    <script>
        $(function () {
            $('.select2Diplomes').select2({
                them: 'classic',
                allowClear: true,
                cache: true
            });
            //ClassicEditor
            //  .create(document.querySelector('#appbundle_annonce_information'))
            //.catch( error);
        })
    </script>
{% endblock %}

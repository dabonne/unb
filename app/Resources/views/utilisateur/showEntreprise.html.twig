{% extends 'entrepriseIndex.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}
    {% block content %}
        <main class="pt-5 mx-lg-6">
            <div class="container-fluid mt-5">
                <table id="table_id" class="table text-nowrap">
                    <thead style="background-color: lightseagreen;">
                    <tr>
                        <th style="color: white">Nom d'utilisateur</th>
                        <th style="color: white">Email</th>
                        <th style="color: white">Modifier</th>
                    </tr>
                    </thead>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <ul class="list-unstyled">
                            <li>
                                <a href="{{ path('utilisateur_edit_entreprise', {'id': user.id}) }}"><i class="fas fa-edit btn-sm"></i>Modifier</a>
                            </li>
                        </ul>
                    </td>

                    <tbody>
                    </tbody>
                </table>
            </div>
        </main>
    {% endblock %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}
